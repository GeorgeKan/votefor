<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <Title>VoteFor : {{title}}</Title>
    <meta name="viewport" content="width=device-width, initial-scale=1,  user-scalable=no">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" type="text/css" href="/css/jquery-ui.min.css">
    <script src="/js/jquery-3.2.0.min.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery-ui.min.js"></script>
<script>
jQuery(document).ready(function(){

jQuery('#signinbtn').button();


jQuery('#signinform').validate({
    success: "valid",
    rules: {
        username: {
            required: true,
            minlength: 5
        },
        email: {
            required: true,
            email: true
        },
        password: {
            required: true,
            minlength: 6
        },
        rtpasswd: {
            required: true,
            equalTo: "#password"
        }
    },
    messages: {
        username: {
            required: "Username required",
            minlength: "Username must be at least 5 chars"
        },
        email: {
            required: "Must give an e-mail",
            email: "E-mail must be valid"
        },
        password: {
            required: "Must give a password",
            minlength: "Password must be at least 6 chars"
        },
        rtpasswd: {
            required: "Must verifay password",
            equalTo: "Not same password"
        }
        
    }
});
});

</script>
</head>
<body>
    {{> header}}

    {{#if errormessage}}
    <h3>{{errormessage}}</h3>
    {{/if}}
    
<form id="signinform" action="signin" method="post">
<label for="username">Username : </label>
<input type="text" id="username" name="username" placeholder="Username" autofocus><br><br>
<label for="email">E-mail : </label>
<input type="email" id="email" name="email" placeholder="e-mail"><br><br>
<label for="password">Password : </label>
<input type="password" id="password" name="password"><br><br>
<label for="rtpasswd">Retype Passwd : </label>
<input type="password" id="rtpasswd" name="rtpasswd"><br><br>
<button id="signinbtn">Sign In</button>
</form>


    {{> footer}}
</body>
</html>